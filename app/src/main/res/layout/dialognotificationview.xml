<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<ImageButton
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:background="@android:drawable/ic_menu_report_image"
    android:backgroundTint="@color/colorAccent"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/titletextdialog"
        android:hint="Your text"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/desciptiondialogtext"
        android:hint="your description"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Your category"
        android:id="@+id/categorydialogtext"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dialogtextview"/>
</LinearLayout>